{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext", 
    "moduleResolution": "node", 
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", 
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*.ts"], 
  "exclude": ["node_modules"] 
}